<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:constraintSet="@layout/now_playing_view_constraint_expanded"
    tools:layoutDescription="@xml/now_playing_view_scene"
    tools:parentTag="androidx.constraintlayout.motion.widget.MotionLayout"
    >

    <ImageView
        android:id="@+id/imageArtwork"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="@string/now_playing_content_description_track_artwork"
        android:scaleType="centerCrop"
        tools:background="#D1020A"
        />

    <View
        android:id="@+id/viewSquareBoundary"
        android:layout_width="0dp"
        android:layout_height="0dp"
        />

    <View
        android:id="@+id/viewSquareBoundaryBottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrierImage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        />

    <com.winsonchiu.aria.framework.view.TextViewWrapper
        android:id="@+id/textSongTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_red_light"
        >

        <com.winsonchiu.aria.framework.view.ReflowTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="56dp"
            android:gravity="start"
            android:lines="1"
            android:maxLines="1"
            android:singleLine="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:textSize="14sp"
            tools:text="Brave Shine"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            tools:text="Brave Shine"
            />

    </com.winsonchiu.aria.framework.view.TextViewWrapper>

    <com.winsonchiu.aria.framework.view.TextViewWrapper
        android:id="@+id/textSongDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_red_light"
        >

        <com.winsonchiu.aria.framework.view.ReflowTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginStart="56dp"
            android:gravity="start"
            android:lines="1"
            android:maxLines="1"
            android:singleLine="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
            android:textSize="12sp"
            tools:text="Fate - Unlimited Blade Works - Brave Shine | Aimer - FateUBW"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
            tools:text="Fate - Unlimited Blade Works - Brave Shine | Aimer - FateUBW"
            />

    </com.winsonchiu.aria.framework.view.TextViewWrapper>

    <ImageView
        android:id="@+id/imageSkipPrevious"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/now_playing_content_description_skip_to_previous"
        app:srcCompat="@drawable/ic_skip_previous_24dp"
        />

    <ImageView
        android:id="@+id/imagePlay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/now_playing_content_description_play"
        app:srcCompat="@drawable/ic_play_arrow_24dp"
        />

    <ImageView
        android:id="@+id/imageSkipNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/now_playing_content_description_skip_to_next"
        app:srcCompat="@drawable/ic_skip_next_24dp"
        />

</merge>