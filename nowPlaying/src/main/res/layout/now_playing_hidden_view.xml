<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:visibility="visible"
    >

    <TextView
        android:id="@+id/textDescriptionCollapsed"
        android:layout_width="0dp"
        android:layout_height="16sp"
        android:layout_marginStart="72dp"
        android:layout_marginEnd="16dp"
        android:autoSizeMaxTextSize="16sp"
        android:autoSizeMinTextSize="6sp"
        android:autoSizeStepGranularity="1px"
        android:autoSizeTextType="uniform"
        android:lines="1"
        android:maxLines="1"
        android:singleLine="true"
        android:textAlignment="textStart"
        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textTitleCollapsed"
        tools:text="Fate - Unlimited Blade Works - Brave Shine | Aimer"
        />

    <Space
        android:id="@+id/viewSquareBoundary"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <Space
        android:id="@+id/viewSquareBoundaryBottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/viewSquareBoundary"
        />

    <FrameLayout
        android:id="@+id/layoutTitle"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="12dp"
        android:background="#44FF0000"
        app:layout_constraintBottom_toTopOf="@+id/layoutDescription"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/viewSquareBoundary"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintVertical_weight="1"
        >

        <TextView
            android:id="@+id/textTitleCollapsed"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="top|start"
            android:layout_marginStart="56dp"
            android:autoSizeMaxTextSize="20sp"
            android:autoSizeMinTextSize="12sp"
            android:autoSizeStepGranularity="1px"
            android:autoSizeTextType="uniform"
            android:lines="1"
            android:maxLines="1"
            android:singleLine="true"
            android:textAlignment="textStart"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            tools:text="Brave Shine"
            />

        <TextView
            android:id="@+id/textTitleExpanded"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:gravity="center_horizontal"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            tools:text="Song title"
            />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/layoutDescription"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="84dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layoutTitle"
        app:layout_constraintVertical_weight="1"
        app:layout_goneMarginTop="20dp"
        >

        <TextView
            android:id="@+id/textDescriptionExpanded"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="top"
            android:gravity="top|center_horizontal"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
            tools:text="Song description"
            />

    </FrameLayout>


</androidx.constraintlayout.widget.ConstraintLayout>